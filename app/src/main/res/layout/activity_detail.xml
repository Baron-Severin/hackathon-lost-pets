<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.mgkan.hackathon_lost_pets.DetailActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="#2000"
        android:layout_alignParentTop="true"
        android:id="@+id/detail_frame"
        android:layout_marginBottom="20dp"
        android:layout_height="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/detailPhoto"
            />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:id="@+id/detail_breed"
        android:orientation="horizontal"
        android:layout_below="@+id/detail_frame">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Breed"
            android:textAlignment="textEnd"
            android:textSize="@dimen/list_item_text"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/list_item_text_padding"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_text_big"
            android:textColor="@color/text_color"
            android:id="@+id/dog_breed"
            android:paddingLeft="@dimen/list_item_text_padding"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_below="@+id/detail_breed"
        android:id="@+id/detail_gender"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textAlignment="textEnd"
            android:textSize="@dimen/list_item_text"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/list_item_text_padding"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_text_big"
            android:textColor="@color/text_color"
            android:id="@+id/dog_gender"
            android:paddingLeft="@dimen/list_item_text_padding"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_gender"
        android:layout_margin="2dp"
        android:id="@+id/detail_date"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Found"
            android:textAlignment="textEnd"
            android:textSize="@dimen/list_item_text"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/list_item_text_padding"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_text_big"
            android:textColor="@color/text_color"
            android:id="@+id/dog_date_found"
            android:paddingLeft="@dimen/list_item_text_padding"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_date"
        android:id="@+id/detail_color"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textAlignment="textEnd"
            android:textSize="@dimen/list_item_text"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/list_item_text_padding"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_text_big"
            android:textColor="@color/text_color"
            android:id="@+id/dog_color"
            android:paddingLeft="@dimen/list_item_text_padding"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_color"
        android:id="@+id/detail_region"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Region Found"
            android:textAlignment="textEnd"
            android:textSize="@dimen/list_item_text"
            android:textColor="@color/text_color"
            android:paddingLeft="@dimen/list_item_text_padding"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_text_big"
            android:textColor="@color/text_color"
            android:id="@+id/dog_area"
            android:paddingLeft="@dimen/list_item_text_padding"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:transitionName="@string/transitionButtonTwo"
        android:textSize="24sp"
        android:id="@+id/lostAndFoundButton"
        android:alpha="0.8"
        android:textColor="#fff"
        android:backgroundTint="@color/colorPrimary"
        android:textAllCaps="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_button"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="That's my pet!"/>



</RelativeLayout>
